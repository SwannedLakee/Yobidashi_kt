<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_horizontal_margin"
            android:layout_marginRight="@dimen/search_horizontal_margin"
            >

            <jp.toastkid.yobidashi.search.url.UrlCardView
                android:id="@+id/url_module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/search_vertical_margin"
                android:padding="8dp"
                android:background="@color/filter_white_bb"
                app:cardElevation="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <include android:id="@+id/url_suggestion_module"
                layout="@layout/module_url_suggestion" />

            <include android:id="@+id/favorite_module"
                layout="@layout/module_search_favorite" />

            <include android:id="@+id/history_module"
                layout="@layout/module_search_history" />

            <include android:id="@+id/suggestion_module"
                layout="@layout/module_search_suggestion" />

            <jp.toastkid.yobidashi.search.trend.HourlyTrendModule
                android:id="@+id/hourly_trend_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/search_vertical_margin"
                app:cardElevation="3dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="@color/filter_white_bb"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>