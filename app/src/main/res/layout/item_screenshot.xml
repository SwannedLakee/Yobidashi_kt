<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardElevation="5dp"
        android:layout_width="@dimen/tab_list_item_width"
        android:layout_height="@dimen/tab_list_item_height"
        android:foreground="@drawable/ripple_transparent"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@drawable/ripple_transparent"
            />
        <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:textSize="14sp"
            android:padding="4dp"
            android:background="@color/soft_background"
            />
        <ImageView
            android:id="@+id/share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_share"
            android:layout_gravity="top|left"
            android:background="@drawable/ripple_soft"
            />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/close_icon_size"
            android:layout_height="@dimen/close_icon_size"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_clear_form"
            android:layout_gravity="top|right"
            android:background="@drawable/ripple_transparent"
            />
    </android.support.v7.widget.CardView>
</layout>