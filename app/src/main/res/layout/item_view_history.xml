<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:foreground="@drawable/ripple_transparent"
        app:cardBackgroundColor="@color/filter_white_bb"
        app:cardElevation="2dp"
        >
        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:foreground="@drawable/ripple_transparent"
            android:background="#DD4444"
            android:visibility="invisible"
            tools:ignore="RtlSymmetry"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_transparent"
            app:cardBackgroundColor="@color/filter_white_bb"
            app:cardElevation="2dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_history_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:maxLines="3"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon"
                    app:layout_constraintEnd_toStartOf="@id/bookmark"
                    tools:text="@string/sample_long_text"
                    />
                <TextView
                    android:id="@+id/url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/link_blue"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintStart_toStartOf="@id/title"
                    app:layout_constraintEnd_toEndOf="@id/title"
                    tools:text="@string/sample_url"
                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/url"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/url"
                    app:layout_constraintStart_toStartOf="@id/title"
                    app:layout_constraintEnd_toEndOf="@id/title"
                    tools:text="@string/sample_date_time"
                    />
                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end|center_vertical"
                    app:srcCompat="@drawable/ic_bookmark_yellow"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ripple_transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</layout>