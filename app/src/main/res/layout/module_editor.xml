<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/soft_background"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <ScrollView
            android:id="@+id/editor_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:fillViewport="true"
            >
            <EditText
                android:id="@+id/editor_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:hint="@string/hint_editor_input"
                />
        </ScrollView>

        <HorizontalScrollView
            android:id="@+id/editor_menu"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <Space
                    android:id="@+id/left_space"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/load"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/load"
                    android:drawableTop="@drawable/ic_load"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/save"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/save"
                    android:drawableTop="@drawable/ic_save"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/backup"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/save_backup"
                    android:drawableTop="@drawable/ic_backup"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/save_as"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/save_as"
                    android:drawableTop="@drawable/ic_save_as"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <TextView
                    android:id="@+id/counter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textSize="14sp"
                    tools:text="character count\n 444"
                    />
                <TextView
                    android:id="@+id/last_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textSize="14sp"
                    tools:text="Last saved:\n 2017/12/22 11:18:19"
                    />
                <Button
                    android:id="@+id/clear"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/clear_all"
                    android:drawableTop="@drawable/ic_clear_form"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Space
                    android:id="@+id/right_space"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </HorizontalScrollView>

    </FrameLayout>
</layout>