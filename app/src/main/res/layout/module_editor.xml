<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/soft_background"
        android:visibility="gone"
        >

        <HorizontalScrollView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="top"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <Button
                    android:id="@+id/load"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/load"
                    android:drawableTop="@drawable/ic_load"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/clip"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/clip"
                    android:drawableTop="@drawable/ic_clip"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/search"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/search"
                    android:drawableTop="@drawable/ic_search_white"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/save"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/save"
                    android:drawableTop="@drawable/ic_save"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/tab_list"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/tab_list"
                    android:drawableTop="@drawable/ic_tab"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/backup"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/save_backup"
                    android:drawableTop="@drawable/ic_backup"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/to_top"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/top"
                    android:drawableTop="@drawable/ic_top"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/to_bottom"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/bottom"
                    android:drawableTop="@drawable/ic_bottom"
                    android:foreground="@drawable/ripple_transparent"
                    />
                <Button
                    android:id="@+id/clear"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    style="?android:attr/buttonBarStyle"
                    android:text="@string/clear_all"
                    android:drawableTop="@drawable/ic_clear_form"
                    android:foreground="@drawable/ripple_transparent"
                    />
            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/editor_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="44dp"
            android:fillViewport="true"
            >
            <EditText
                android:id="@+id/editor_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:inputType="textMultiLine"
                android:minLines="10"
                />
        </ScrollView>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/browser_footer_height"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="character count: 444"
                />

            <TextView
                android:id="@+id/last_saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Last saved: 2017/12/22 11:18:19"
                />
        </LinearLayout>
    </FrameLayout>
</layout>