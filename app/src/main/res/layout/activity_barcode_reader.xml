<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activity" type="jp.toastkid.yobidashi.barcode.BarcodeReaderActivity" />
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.journeyapps.barcodescanner.CompoundBarcodeView
            android:id="@+id/barcode_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:minHeight="?android:actionBarSize"
            android:background="@color/transparent"
            android:layout_gravity="top"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/camera"
            android:layout_width="@dimen/menu_button_size"
            android:layout_height="@dimen/menu_button_size"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_camera_black"
            app:backgroundTint="@color/soft_background"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{view -> activity.camera()}"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/filter_white_aa"
            android:layout_gravity="bottom"
            android:visibility="gone"
            tools:visibility="visible"
            >
            <LinearLayout
                android:id="@+id/submenus"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <TextView
                    android:id="@+id/clip"
                    style="@style/BarcodeReaderSubMenuStyle"
                    android:text="@string/clip"
                    android:onClick="@{activity::clip}"
                    />
                <TextView
                    android:id="@+id/share"
                    style="@style/BarcodeReaderSubMenuStyle"
                    android:text="@string/share"
                    android:onClick="@{view -> activity.share()}"
                    />
                <TextView
                    android:id="@+id/open"
                    style="@style/BarcodeReaderSubMenuStyle"
                    android:text="@string/open"
                    android:onClick="@{view -> activity.open()}"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:layout_constraintTop_toBottomOf="@id/submenus"
                android:textSize="20sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>