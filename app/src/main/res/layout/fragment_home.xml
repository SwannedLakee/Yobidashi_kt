<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="fragment" type="jp.toastkid.yobidashi.home.HomeFragment" />
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerInParent="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@color/filter_white"
            android:foreground="@drawable/ripple_transparent"
            >
            <FrameLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_search_white"
                    android:onClick="@{view -> fragment.search()}"
                    />
                <TextView
                    android:id="@+id/search_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:maxLines="1"
                    android:text="@string/title_search"
                    android:textSize="24sp"
                    android:gravity="center_vertical"
                    android:onClick="@{view -> fragment.search()}"
                    >
                    <requestFocus/>
                </TextView>
                <View
                    android:id="@+id/search_input_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="64dp"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    />
                <ImageView
                    android:id="@+id/voice_search"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="68dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_mic"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{view -> fragment.voiceSearch()}"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/search_action_background"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                >
                <TextView
                    android:id="@+id/search_action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_search_action"
                    android:textColor="@color/white"
                    android:background="@drawable/ripple_appwidget"
                    android:onClick="@{view -> fragment.search()}"
                    />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_above="@id/search"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="60sp"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menus_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </RelativeLayout>
</layout>