<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="module" type="jp.toastkid.jitte.browser.page_search.PageSearcherModule" />
    </data>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="top"
        android:background="@color/filter_white"
        android:visibility="gone"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="84dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_find_in_page"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                />
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/close"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="4dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_close"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{module.hide}"
            />
        <ImageView
            android:id="@+id/sip_clear"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="84dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_clear_form"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{module.clearInput}"
            />

        <ImageView
            android:id="@+id/sip_upward"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="44dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_up"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{module.findUp}"
            />

        <ImageView
            android:id="@+id/sip_downward"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_down"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{module.findDown}"
            />

    </android.support.v7.widget.CardView>
</layout>