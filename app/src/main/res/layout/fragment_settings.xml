<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="fragment"
            type="jp.toastkid.yobidashi.settings.SettingsTopFragment" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/displaying_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SettingCardStyle"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SettingSubhead"
                    android:text="@string/subhead_displaying"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >
                    <requestFocus />
                </TextView>
                <TextView
                    android:id="@+id/color_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:drawableLeft="@drawable/ic_palette_black"
                    android:text="@string/title_settings_color"
                    android:onClick="@{fragment.colorSettings}"
                    />

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:id="@+id/background_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:drawableLeft="@drawable/ic_photo_black"
                    android:text="@string/title_set_bg"
                    android:onClick="@{fragment.backgroundSettings}"
                    />

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:id="@+id/clear_background_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:drawableLeft="@drawable/ic_close_black"
                    android:text="@string/title_bg_reset"
                    android:onClick="@{fragment.clearBackgroundSettings}"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/browser_module"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/SettingCardStyle"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SettingSubhead"
                    android:text="@string/subhead_setting_browesr"
                    />
                <FrameLayout
                    android:id="@+id/use_internal_browser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchInternalBrowser}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_open_in_browser_black"
                        android:text="@string/title_use_internal_browser"
                        />
                    <CheckBox
                        android:id="@+id/use_internal_browser_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <FrameLayout
                    android:id="@+id/retain_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchRetainTabs}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_tab_black"
                        android:text="@string/title_retain_tabs"
                        />
                    <CheckBox
                        android:id="@+id/retain_tabs_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/OneLineTextMenu"
                    android:drawableLeft="@drawable/ic_home_black"
                    android:text="@string/title_home"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchInternalBrowser}"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/home_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/common_horizontal_margin"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/home_button"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:text="@string/settings_color_commit"
                        style="?android:attr/buttonBarStyle"
                        android:onClick="@{fragment.commitHomeInput}"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <FrameLayout
                    android:id="@+id/browser_js"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchJsEnabled}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/settings_item_left_margin"
                        android:gravity="center_vertical"
                        android:text="@string/title_enable_javascript"
                        />
                    <CheckBox
                        android:id="@+id/browser_js_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <FrameLayout
                    android:id="@+id/use_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchLoadingImage}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/settings_item_left_margin"
                        android:gravity="center_vertical"
                        android:text="@string/title_load_image"
                        />
                    <CheckBox
                        android:id="@+id/use_image_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <FrameLayout
                    android:id="@+id/save_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchSaveFormData}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/settings_item_left_margin"
                        android:gravity="center_vertical"
                        android:text="@string/title_save_form_data"
                        />
                    <CheckBox
                        android:id="@+id/save_form_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:text="@string/title_menu_position"
                    />
                <RadioGroup
                    android:id="@+id/menu_pos_radio"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_item_left_margin"
                    >
                    <RadioButton
                        android:id="@+id/menu_pos_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/left"
                        />
                    <RadioButton
                        android:id="@+id/menu_pos_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/settings_item_left_margin"
                        android:text="@string/right"
                        />
                </RadioGroup>

                <include layout="@layout/primary_dark_divider"/>

                <FrameLayout
                    android:id="@+id/user_agent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:onClick="@{fragment.userAgent}"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/OneLineTextMenu"
                        android:layout_gravity="left"
                        android:text="@string/title_user_agent"
                        />
                    <TextView
                        android:id="@+id/user_agent_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/OneLineTextMenu"
                        android:layout_gravity="right"
                        />
                </FrameLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/notifications_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SettingCardStyle"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SettingSubhead"
                    android:text="@string/subhead_notification"
                    />
                <FrameLayout
                    android:id="@+id/use_notification_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchNotificationWidget}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/title_show_notification_widget"
                        />
                    <CheckBox
                        android:id="@+id/use_notification_widget_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <FrameLayout
                    android:id="@+id/use_daily_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchDailyAlarm}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_alarms"
                        android:text="@string/title_daily_notification"
                        />
                    <CheckBox
                        android:id="@+id/use_daily_alarm_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SettingCardStyle"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SettingSubhead"
                    android:text="@string/subhead_others"
                    />

                <FrameLayout
                    android:id="@+id/use_color_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_transparent"
                    android:onClick="@{fragment.switchColorFilter}"
                    >
                    <TextView
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/title_color_filter"
                        />
                    <CheckBox
                        android:id="@+id/use_color_filter_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_horizontal_margin"
                        android:layout_gravity="right"
                        android:clickable="false"
                        style="@style/Border"
                        />
                </FrameLayout>

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:id="@+id/settings_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:drawableLeft="@drawable/ic_settings_cell_black"
                    android:text="@string/title_settings_device"
                    android:onClick="@{fragment.deviceSetting}"
                    />

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:id="@+id/settings_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:text="@string/title_settings_wifi"
                    android:drawableLeft="@drawable/ic_wifi_black"
                    android:onClick="@{fragment.wifi}"
                    />

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:id="@+id/settings_wireless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:text="@string/title_settings_wireless"
                    android:drawableLeft="@drawable/ic_network_black"
                    android:onClick="@{fragment.wireless}"
                    />

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:id="@+id/settings_date_and_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:text="@string/title_settings_date_and_time"
                    android:drawableLeft="@drawable/ic_time"
                    android:onClick="@{fragment.dateAndTime}"
                    />

                <include layout="@layout/primary_dark_divider"/>

                <TextView
                    android:id="@+id/settings_all_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/OneLineTextMenu"
                    android:text="@string/title_settings_all_apps"
                    android:drawableLeft="@drawable/ic_android_app"
                    android:onClick="@{fragment.allApps}"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SettingCardStyle"
            >
            <TextView
                android:id="@+id/clear_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/OneLineTextMenu"
                android:text="@string/title_clear_settings"
                android:drawableLeft="@drawable/ic_close_black"
                android:onClick="@{fragment.clearSettings}"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>