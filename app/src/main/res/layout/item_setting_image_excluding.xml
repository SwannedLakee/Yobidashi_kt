<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:minHeight="@dimen/search_item_height"
        >
        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:foreground="@drawable/ripple_transparent"
            android:background="#DD4444"
            android:visibility="invisible"
            tools:ignore="RtlSymmetry"
            />

        <FrameLayout
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_transparent"
            android:background="@color/soft_background"
            >
            <ImageView
                android:id="@+id/icon"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:adjustViewBounds="true"
                />
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaajyaaaaaaaaa"
                android:maxLines="3"
                android:gravity="center_vertical"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/delete_button"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                app:srcCompat="@drawable/ic_remove_circle"
                android:adjustViewBounds="true"
                android:background="@drawable/ripple_transparent"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40dp"
                android:background="@color/search_divider"
                />
        </FrameLayout>
    </FrameLayout>
</layout>