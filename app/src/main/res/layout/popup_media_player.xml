<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="popup" type="jp.toastkid.yobidashi.media.music.popup.MediaPlayerPopup" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/popup_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/media_player_popup_header_height"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:contentDescription="@string/image"
                />
            <LinearLayout
                android:id="@+id/control"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                >
                <ImageView
                    android:id="@+id/reset"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_stop"
                    android:onClick="@{view -> popup.reset()}"
                    android:contentDescription="@string/settings_color_reset"
                    android:background="@drawable/ripple_transparent"
                    />
                <ImageView
                    android:id="@+id/play_switch"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_play_media"
                    android:onClick="@{view -> popup.switchState()}"
                    android:contentDescription="@string/description_play_switch"
                    android:background="@drawable/ripple_transparent"
                    />
                <ImageView
                    android:id="@+id/shuffle"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_shuffle"
                    android:onClick="@{view -> popup.shuffle()}"
                    android:contentDescription="@string/action_shuffle"
                    android:background="@drawable/ripple_transparent"
                    />
                <Spinner
                    android:id="@+id/playing_speed"
                    android:layout_width="88sp"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:id="@+id/hide"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_close"
                    android:onClick="@{view -> popup.hide()}"
                    android:contentDescription="@string/close"
                    android:background="@drawable/ripple_transparent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/media_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            tools:listitem="@layout/item_media_list"
            tools:itemCount="4"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>