<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="module" type="jp.toastkid.jitte.search.favorite.FavoriteSearchModule" />
    </data>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_vertical_margin"
        app:cardElevation="3dp"
        android:visibility="gone"
        android:background="@color/filter_white_bb"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_favorite_search"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_favorites"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                />
            <include layout="@layout/primary_dark_divider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_height"
                style="@style/OneLineTextMenu"
                android:text="@string/title_clear_search_history"
                android:onClick="@{module.clearHistory}"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>