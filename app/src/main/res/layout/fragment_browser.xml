<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="fragment" type="jp.toastkid.yobidashi.browser.BrowserFragment" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:id="@+id/web_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include android:id="@+id/editor" layout="@layout/module_editor" />

        <FrameLayout
            android:id="@+id/module_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <include
            android:id="@+id/floating_preview"
            layout="@layout/content_floating_preview"
            />

        <jp.toastkid.yobidashi.libs.view.CircleRecyclerView
            android:id="@+id/menus_view"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_gravity="right"
            android:layoutAnimation="@anim/layout_slide_in_right"
            android:visibility="gone"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/menu_switch"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_menu_cycle"
            app:backgroundTint="@color/soft_background"
            android:background="@drawable/ripple_transparent"
            android:onClick="@{view -> fragment.switchMenuVisibility()}"
            />

        <include android:id="@+id/sip" layout="@layout/module_searcher" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>