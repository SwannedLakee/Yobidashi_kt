<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="fragment" type="jp.toastkid.yobidashi.settings.color.ColorSettingFragment" />
    </data>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/setting_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <include
                android:id="@+id/palettes"
                layout="@layout/module_color_setting"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_500_dd"
                app:layout_constraintTop_toBottomOf="@id/ok"
                app:layout_constraintBottom_toTopOf="@id/subhead_saved_color"
                />

            <TextView
                android:id="@+id/subhead_saved_color"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/settings_item_left_margin"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/settings_color_saved_title"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/ok"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/clear_saved_color"
                />

            <Button
                android:id="@+id/clear_saved_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="16dp"
                android:background="@color/ripple"
                android:gravity="center"
                android:textSize="10sp"
                style="?android:attr/buttonBarStyle"
                android:text="@string/title_clear_saved_color"
                app:layout_constraintTop_toTopOf="@id/subhead_saved_color"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/saved_colors"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:itemCount="18"
                tools:listitem="@layout/item_saved_color"
                app:layout_constraintTop_toBottomOf="@id/subhead_saved_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>