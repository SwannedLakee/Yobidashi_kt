<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="fragment" type="jp.toastkid.yobidashi.settings.color.ColorSettingFragment" />
    </data>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/setting_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/background_color_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/settings_item_left_margin"
                android:text="@string/settings_color_background_title"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.larswerkman.holocolorpicker.ColorPicker
                android:id="@+id/background_palette"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/background_color_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/font_palette"
                />

            <com.larswerkman.holocolorpicker.SVBar
                android:id="@+id/background_svbar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/background_palette"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/font_svbar"
                />

            <com.larswerkman.holocolorpicker.OpacityBar
                android:id="@+id/background_opacitybar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/background_svbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/font_opacitybar"
                />

            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/settings_item_left_margin"
                android:layout_marginRight="@dimen/settings_item_left_margin"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="@string/settings_color_commit"
                android:textSize="14sp"
                style="?android:attr/buttonBarStyle"
                android:onClick="@{view -> fragment.ok()}"
                app:layout_constraintTop_toBottomOf="@id/background_opacitybar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/prev"
                />

            <TextView
                android:id="@+id/font_palette_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/settings_item_left_margin"
                android:text="@string/settings_color_font_title"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/font_opacitybar"
                />
            <com.larswerkman.holocolorpicker.ColorPicker
                android:id="@+id/font_palette"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/font_palette_title"
                app:layout_constraintStart_toEndOf="@id/background_palette"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.larswerkman.holocolorpicker.SVBar
                android:id="@+id/font_svbar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/font_palette"
                app:layout_constraintStart_toEndOf="@id/background_svbar"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.larswerkman.holocolorpicker.OpacityBar
                android:id="@+id/font_opacitybar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@id/font_svbar"
                app:layout_constraintStart_toEndOf="@id/background_opacitybar"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <Button
                android:id="@+id/prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/settings_item_left_margin"
                android:layout_marginRight="@dimen/settings_item_left_margin"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="@string/settings_color_reset"
                android:textSize="14sp"
                style="?android:attr/buttonBarStyle"
                android:onClick="@{view -> fragment.reset()}"
                app:layout_constraintTop_toBottomOf="@id/font_opacitybar"
                app:layout_constraintStart_toEndOf="@id/ok"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_500_dd"
                app:layout_constraintTop_toBottomOf="@id/ok"
                app:layout_constraintBottom_toTopOf="@id/subhead_saved_color"
                />

            <TextView
                android:id="@+id/subhead_saved_color"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/settings_item_left_margin"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="@string/settings_color_saved_title"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/ok"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/clear_saved_color"
                />

            <Button
                android:id="@+id/clear_saved_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="16dp"
                android:background="@color/ripple"
                android:gravity="center"
                android:textSize="10sp"
                style="?android:attr/buttonBarStyle"
                android:text="@string/title_clear_saved_color"
                app:layout_constraintTop_toTopOf="@id/subhead_saved_color"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/saved_colors"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:itemCount="18"
                tools:listitem="@layout/item_saved_color"
                app:layout_constraintTop_toBottomOf="@id/subhead_saved_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>