<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/soft_background"
        android:foreground="@drawable/ripple_transparent"
        app:cardElevation="2dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            >

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                tools:src="@drawable/ic_android_app"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                tools:text="@string/sample_long_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/app_icon"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/app_target_sdk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:text="23"
                app:layout_constraintTop_toBottomOf="@id/app_title"
                app:layout_constraintStart_toStartOf="@id/app_title"
                app:layout_constraintEnd_toEndOf="@id/app_title"
                />
            <TextView
                android:id="@+id/app_package_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="jp.toastkid.yobidashi2"
                app:layout_constraintTop_toBottomOf="@id/app_target_sdk"
                app:layout_constraintStart_toStartOf="@id/app_title"
                app:layout_constraintEnd_toEndOf="@id/app_title"
                />
            <TextView
                android:id="@+id/app_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:text="2.1.8"
                app:layout_constraintTop_toBottomOf="@id/app_package_name"
                app:layout_constraintStart_toStartOf="@id/app_title"
                app:layout_constraintEnd_toEndOf="@id/app_title"
                />
            <TextView
                android:id="@+id/app_installed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:text="@string/sample_date_time"
                app:layout_constraintTop_toBottomOf="@id/app_version"
                app:layout_constraintStart_toStartOf="@id/app_title"
                app:layout_constraintEnd_toEndOf="@id/app_title"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>