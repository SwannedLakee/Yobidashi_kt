<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height"
        android:background="@color/filter_white_bb"
        android:foreground="@drawable/ripple_transparent"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/search_horizontal_margin"
            android:adjustViewBounds="true"
            android:layout_gravity="left"
            android:src="@drawable/ic_archive"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            >

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                tools:text="@string/sample_long_text"
                />
            <TextView
                android:id="@+id/subtext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                tools:text="@string/sample_long_text"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_horizontal_margin"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_remove_circle_white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="60dp"
            android:background="@color/colorPrimaryDark"
            />
    </FrameLayout>
</layout>