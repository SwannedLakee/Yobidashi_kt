<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/sample"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="@string/minus"
                android:textColor="@color/gray_500_dd"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/OneLineTextMenu"
                android:layout_marginLeft="40dp"
                android:text="@string/title_filter_color"
                />
            <Button
                android:id="@+id/default_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarStyle"
                android:layout_marginRight="8dp"
                android:layout_gravity="right|center_vertical"
                android:text="@string/title_default"
                />

        </FrameLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/yellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/default_color_filter"
                    style="?android:attr/buttonBarStyle"
                    />
                <Button
                    android:id="@+id/dark"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/darkgray_scale"
                    style="?android:attr/buttonBarStyle"
                    />
                <Button
                    android:id="@+id/red"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/red_200_dd"
                    style="?android:attr/buttonBarStyle"
                    />
                <Button
                    android:id="@+id/green"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/lime_bg"
                    style="?android:attr/buttonBarStyle"
                    />
                <Button
                    android:id="@+id/blue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/light_blue_200_dd"
                    style="?android:attr/buttonBarStyle"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <SeekBar
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:max="255"
            />
    </LinearLayout>
</layout>