<!--suppress AndroidDomInspection -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FunctionsNotificationImageStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FunctionsNotificationTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">9dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

</resources>